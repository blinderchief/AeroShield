{
  "name": "aeroshield-contracts",
  "version": "1.0.0",
  "description": "AeroShield Parametric Flight Insurance Smart Contracts on Flare Network",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:coston2": "hardhat run scripts/deploy.ts --network coston2",
    "deploy:flare": "hardhat run scripts/deploy.ts --network flare",
    "deploy:flare-contracts": "hardhat run scripts/deployFlareContracts.ts --network coston2",
    "deploy:all": "npm run deploy:coston2 && npm run sync-frontend",
    "verify": "hardhat verify",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol' 'scripts/**/*.ts' 'test/**/*.ts'",
    "fdc:prepare": "npx hardhat run scripts/fdc/prepareAttestation.ts --network coston2",
    "fdc:submit": "npx hardhat run scripts/fdc/submitAttestation.ts --network coston2",
    "fdc:verify": "npx hardhat run scripts/fdc/verifyAttestation.ts --network coston2",
    "ftso:prices": "npx hardhat run scripts/interactFTSO.ts --network coston2",
    "typechain": "hardhat typechain",
    "sync-frontend": "npx hardhat run scripts/syncToFrontend.ts",
    "listen": "npx hardhat run scripts/eventListener.ts --network coston2",
    "demo": "npx hardhat run scripts/demo.ts --network localhost",
    "demo:coston2": "npx hardhat run scripts/demo.ts --network coston2"
  },
  "dependencies": {
    "@flarenetwork/flare-periphery-contracts": "^0.1.38"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.5",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "hardhat": "^2.19.2",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "flare",
    "blockchain",
    "insurance",
    "parametric",
    "smart-contracts",
    "fdc",
    "ftso"
  ],
  "author": "AeroShield Team",
  "license": "MIT"
}
